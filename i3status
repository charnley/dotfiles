#}

run_watch DHCP {
    pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
    pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
    # path exists when a VPN tunnel launched by nmcli/nm-applet is active
    path = "/proc/sys/net/ipv4/conf/tun0"
    # format = "vpn %status"
    format = " vpn "
}

tztime date {
    format = " %Y %m %d "
}
tztime hours {
    format = " %H:%M "
}

load {
    format = " cpu %1min "
}

disk "/" {
    format = " %avail "
}

volume master {
    format = " â™ª %volume "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

cpu_temperature 0 {
    format = " %degrees Â°C "
}
