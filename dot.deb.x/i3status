wireless wlan0 {
    format_up = " (%quality %essid %ip) "
    format_down = "wifi"
}

wireless wlp4s0 {
    format_up = " (%quality %essid %ip) "
    format_down = " wifi "
}

ethernet enx0050b6561b6a {
    format_up = " %ip (%speed) "
    format_down = " lan "
}

ethernet enxe04f435cf9fb {
    # if you use %speed, i3status requires root privileges
    format_up = " %ip (%speed) "
    format_down = " lan "
}

ethernet enxe04f435d2fd2 {
    # if you use %speed, i3status requires root privileges
    format_up = " (%ip) "
    format_down = " lan "
}

ethernet enp0s31f6 {
    # if you use %speed, i3status requires root privileges
    format_up = " %ip (%speed) "
    format_down = " lan "
}

ethernet eth0 {
    # if you use %speed, i3status requires root privileges
    format_up = " %ip (%speed) "
    format_down = " eth0 "
}

ethernet eth1 {
    # if you use %speed, i3status requires root privileges
    format_up = " %ip (%speed) "
    format_down = " eth1 "
}

battery 0 {
    format = " %status %percentage %remaining "
    format_down = ""
    last_full_capacity = true
    integer_battery_capacity = true
    low_threshold = 11
    threshold_type = percentage
    hide_seconds = true
    status_chr = "âš¡"
    status_bat = "ðŸ”‹"
